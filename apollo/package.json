{
  "name": "apollo",
  "private": true,
  "type": "module",
  "scripts": {
    "lint-schema": "graphql-schema-linter",
    "lint-code": "eslint .",
    "codegen": "graphql-codegen --config codegen.ts && tsc --noEmit",
    "build": "npm run codegen && node build.mjs",
    "start": "npm run build && node ./dist/index.cjs",
    "precommit": "npm run codegen && npm run lint-schema && npm run lint-code -- --fix && npm run build"
  },
  "graphql-schema-linter": {
    "rules": [
      "defined-types-are-used",
      "deprecations-have-a-reason",
      "enum-values-all-caps",
      "enum-values-sorted-alphabetically",
      "fields-are-camel-cased",
      "input-object-values-are-camel-cased",
      "interface-fields-sorted-alphabetically",
      "type-fields-sorted-alphabetically",
      "types-are-capitalized"
    ],
    "schemaPaths": [
      "src/typedefs.gql",
      "src/*/typedefs.gql"
    ]
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.0.1",
    "@apollo/server": "^4.7.4",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-tools/merge": "^9.0.0",
    "@types/node": "^18.16.18",
    "esbuild": "^0.18.8",
    "graphql": "^16.6.0",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "graphql-schema-linter": "^3.0.1"
  }
}
